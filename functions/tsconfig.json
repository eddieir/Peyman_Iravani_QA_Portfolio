{
  "compileOnSave": true,
  "include": [
    "./**/*"
  ],
  "exclude": [
    "lib"
  ],
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noUnusedLocals": true
  }
}